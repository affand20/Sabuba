<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/bg_regist"
        android:layout_height="match_parent"
        tools:context=".Register.RegisterActivity">
    <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="8dp"
            app:contentPadding="16dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:id="@+id/form_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Register"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Silahkan mendaftar lebih dahulu"
                        android:textSize="12sp" />

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Nama Lengkap">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/nama_lengkap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="E-mail">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Password">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Konfirmasi Password">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.design.button.MaterialButton
                            android:id="@+id/register_ibu"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/colorAccentYellow"
                            android:text="Daftar Sebagai Ibu"
                            android:textColor="#000"
                            app:cornerRadius="4dp" />
                    <android.support.design.button.MaterialButton
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:id="@+id/register_dokter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:textAllCaps="false"
                            android:text="Daftar Sebagai Dokter"
                            app:cornerRadius="4dp" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sudah punya akun? " />

                    <TextView
                            android:id="@+id/login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/masuk_disini"
                            android:textColor="#000" />
                </LinearLayout>

                <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                    android:translationX="500dp"
                    android:visibility="gone"
                    android:id="@+id/form_ortu_balita"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Data Orang Tua Balita"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Silakan lengkapi data diri anda dahulu"
                        android:textSize="12sp" />

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Nama Ayah">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/nama_ayah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Nama Ibu">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/nama_ibu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Alamat Rumah">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/alamat_rumah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Nomor Handphone">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/nomor_hp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.button.MaterialButton
                        android:id="@+id/next_form_ortu_balita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Selanjutnya"
                        app:cornerRadius="4dp" />
            </LinearLayout>

            <LinearLayout
                    android:translationX="500dp"
                    android:visibility="gone"
                    android:id="@+id/form_balita"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Data Balita"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Silakan lengkapi data balita anda dahulu"
                        android:textSize="12sp" />

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Nama Balita">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/nama_balita"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Jenis Kelamin"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:id="@+id/jenis_kelamin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:entries="@array/jenis_kelamin" />

                <LinearLayout
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Usia">

                        <android.support.design.widget.TextInputEditText
                                android:id="@+id/usia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number" />
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                            android:layout_marginTop="16dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="#000"
                            android:text="Bulan"
                            android:layout_weight="0.25"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:hint="Berat Badan">

                            <android.support.design.widget.TextInputEditText
                                    android:id="@+id/berat_badan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"/>
                        </android.support.design.widget.TextInputLayout>
                        <TextView
                                android:layout_marginTop="16dp"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textColor="#000"
                                android:text="Kg"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:hint="Tinggi Badan">

                            <android.support.design.widget.TextInputEditText
                                    android:id="@+id/tinggi_badan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number" />
                        </android.support.design.widget.TextInputLayout>
                        <TextView
                                android:layout_marginTop="16dp"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textColor="#000"
                                android:text="Cm"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <android.support.design.button.MaterialButton
                        android:id="@+id/next_form_balita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Selanjutnya"
                        app:cornerRadius="4dp" />
            </LinearLayout>

            <LinearLayout
                    android:translationX="500dp"
                    android:visibility="gone"
                    android:id="@+id/form_riwayat_kelahiran"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Data Riwayat Kelahiran"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Silakan lengkapi data riwayat kelahiran dahulu"
                        android:textSize="12sp" />

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Anak Ke">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/anak_ke"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Umur Kehamilan">

                        <android.support.design.widget.TextInputEditText
                                android:id="@+id/umur_kehamilan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number" />
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                            android:layout_gravity="center_vertical"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="#000"
                            android:text="Bulan"
                            android:layout_weight="0.75"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                        android:text="Penolong"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <RadioGroup
                        android:layout_marginTop="8dp"
                        android:id="@+id/radio_group_penolong"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <RadioButton
                            android:id="@+id/radio_bidan"
                            android:layout_weight="1"
                            android:text="Bidan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/radio_dokter"
                            android:layout_weight="1"
                            android:text="Dokter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </RadioGroup>

                <TextView
                        android:text="Jenis Persalinan"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <RadioGroup
                        android:layout_marginTop="8dp"
                        android:id="@+id/radio_group_jenis_persalinan"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <RadioButton
                            android:id="@+id/radio_normal"
                            android:layout_weight="1"
                            android:text="Normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/radio_operasi"
                            android:layout_weight="1"
                            android:text="Operasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </RadioGroup>

                <TextView
                        android:text="Tempat Persalinan"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <RadioGroup
                        android:layout_marginTop="8dp"
                        android:id="@+id/radio_group_tempat_persalinan"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <RadioButton
                            android:id="@+id/radio_bidan_praktik_mandiri"
                            android:layout_weight="1"
                            android:text="Bidan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/radio_puskesmas"
                            android:layout_weight="1"
                            android:text="Puskesmas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/radio_rumah_sakit"
                            android:layout_weight="1"
                            android:text="Rumah Sakit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </RadioGroup>

                <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Berat Badan Lahir">

                        <android.support.design.widget.TextInputEditText
                                android:id="@+id/berat_badan_lahir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"/>
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                            android:layout_gravity="center_vertical"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="#000"
                            android:text="Kg"
                            android:layout_weight="0.75"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <android.support.design.button.MaterialButton
                        android:id="@+id/submit_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Selesai dan Lanjutkan"
                        app:cornerRadius="4dp" />
                <ProgressBar
                        android:id="@+id/progress_bar_submit_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>


    </android.support.design.card.MaterialCardView>

    <ImageView

            android:src="@drawable/bg_register"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>