<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu.MenuActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <!--<RelativeLayout-->
                <!--android:id="@+id/toolbar_layout"-->
            <!--android:background="@color/colorPrimary"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp">-->
            <!--<android.support.v7.widget.Toolbar-->
                    <!--android:layout_marginBottom="8dp"-->
                    <!--app:title="Sabuba"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--app:subtitleTextColor="@android:color/white"-->
                    <!--android:id="@+id/toolbar"-->
                    <!--app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Large"-->
                    <!--app:titleTextColor="@android:color/white"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="?attr/actionBarSize"/>-->
        <!--</RelativeLayout>-->
        <LinearLayout
                android:id="@+id/layout_top"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="8dp"
                android:weightSum="4"
                android:paddingRight="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageButton
                        android:id="@+id/deteksi_dini"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_settings"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="8dp"

                        android:layout_gravity="center_horizontal"
                        android:text="Deteksi Dini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageButton
                        android:id="@+id/galeri"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_settings"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="8dp"

                        android:layout_gravity="center_horizontal"
                        android:text="Galeri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageButton
                        android:id="@+id/imunisasi"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_settings"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="8dp"

                        android:layout_gravity="center_horizontal"
                        android:text="Imuniasasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageButton
                        android:id="@+id/balita_sakit"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_settings"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="8dp"

                        android:layout_gravity="center_horizontal"
                        android:text="Balita Sakit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="8dp"
                android:weightSum="4"
                android:paddingRight="8dp"
                android:layout_below="@id/layout_top"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageButton
                        android:id="@+id/chat_dokter"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_settings"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Chat Dokter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageButton
                        android:id="@+id/pengaturan"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_settings"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Pengaturan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:layout_marginTop="32dp"
                android:layout_marginLeft="16dp"
                android:text="Artikel dan Tips"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                    android:id="@+id/cv_artikel"
                    android:visibility="gone"
                    app:contentPadding="16dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                        android:nestedScrollingEnabled="false"
                        android:id="@+id/rv_artikel_tips"
                        tools:listitem="@layout/artikel_dan_tips_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>

            <ProgressBar
                    android:layout_marginTop="64dp"
                    android:visibility="gone"
                    android:id="@+id/progress_bar"
                    android:indeterminateTint="@color/colorPrimaryDark"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>


</ScrollView>