<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        tools:context=".DeteksiDini.DeteksiDiniActivity">

    <ImageView
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:src="@drawable/bg_kuesioner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
                android:visibility="visible"
                android:translationX="500dp"
                android:id="@+id/card_usia_balita"
                android:background="@android:color/white"
                app:cardCornerRadius="8dp"
                app:contentPadding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Umur Balita Anda"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ListView
                        android:entries="@array/kuesioner_umur_balita"
                        android:id="@+id/lv_umur_balita"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:translationX="500dp"
                android:visibility="gone"
                android:id="@+id/card_kuesioner"
                android:background="@android:color/white"
                app:cardCornerRadius="8dp"
                app:contentPadding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Pertanyaan"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_kuesioner"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="32dp"
                        android:textAlignment="center"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageButton
                            android:layout_weight="1"
                            android:id="@+id/no_button"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginBottom="8dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:cropToPadding="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/no_sign_1"/>
                    <ImageButton
                            android:layout_weight="1"
                            android:id="@+id/yes_button"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginBottom="8dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:cropToPadding="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/yes_sign_1"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:visibility="gone"
                android:translationX="500dp"
                android:id="@+id/card_hasil_kuesioner"
                android:background="@android:color/white"
                app:cardCornerRadius="8dp"
                app:contentPadding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Hasil Kuesioner"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="32dp"
                        android:id="@+id/emotion"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="16dp"
                        android:id="@+id/arahan_hasil_kuesioner"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"/>
                <android.support.design.button.MaterialButton
                        android:layout_marginTop="32dp"
                        android:text="Chat Dokter Sekarang"
                        android:id="@+id/btn_arahan_kuesioner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>